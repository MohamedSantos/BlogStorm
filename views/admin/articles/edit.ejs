<!DOCTYPE html>
<html lang="pt-br"><head>
    <meta charset="utf-8">
    <meta charset="viewport" content="width- device-width, inital-scale= 1.0">

    <title>Storm - ADM</title>

    <link rel="shortcut icon" href="/css/images/favicon.ico" >
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="/css/register.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link rel="stylesheet" href="https://kit-free.fontawesome.com/releases/latest/css/free.min.css" media="all">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
</head>

<body class="maxhidth center">
    <div class="clearfix">
        <form method="POST" action="/articles/update" enctype="multipart/form-data" class="login-form">
            <h1>Editar Artigo</h1>
            <div class="textb">
                <input id="title" value="<%=article.title%>" name="title" type="text" required>
                <div class="placeholder">
                    Título
                </div>
            </div>
            <br>
            <div class="textb">
                <input id="subtitle" value="<%=article.subtitle%>" name="subtitle" type="text" required>
                <div class="placeholder">
                    Subtítulo
                </div>
            </div>
            <br>
            <h2>Imagem principal:</h2>
            <br>
            <img width="100%" src="/uploads/<%= article.img%>" style="width:100%; margin-block-end: 1em; text-align:center; border-radius: 8px; box-shadow: 0px 0px 5px #c0c0c0;">
            <br><br>
            <textarea name="body" placeholder="Escreva o artigo" class="form-control" id="article" required><%-article.body%></textarea>
            <br>
            <div class="textb">
                <input id="nameAuthor" name="nameAuthor" value="<%= article.nameAuthor%>" type="text" style="width: 50%;" required>
                <div class="placeholder">
                    Autor(a)
                </div>
            </div>
        
            <label for="category"> Categoria: </label>
            <select id="category" name="category" class="form-control" required>
                <% categories.forEach((category) => {%>
                
                <% if(category.id==article.categoryId){%>
                    <option value="<%= category.id%>" selected><%= category.title%></option>
                <% %>

                <% }else{%>
                    <option value=""> Selecione uma categoria </option>
                    <option value="<%= category.id%>"><%= category.title%></option>
                <%}%>
                <% })%>
            </select>
        
            <input type="submit" class="btn" value="Atualizar">     
            <input type="hidden" value="<%= article.id%>" id="id" name="id">
        </form>
        <button class="btn" style="background-color: #292685; width: 100px; font-size: 15px;" onclick="goBack()">Voltar</button>
    </div>

<script>
    function goBack(){
        window.history.back()
    }
</script> 
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector: "#article",
        setup: function (editor) {
        editor.on('change', function () {
          tinymce.triggerSave();
        });
        },
        plugins:[
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>
</body>

</html>