<%- include ('../../partials/headerAdm.ejs')%>
    <div class="maxhidth center">
        <div class="padding1">
            <h1 class="title" style="font-weight: 800;text-align: center;">
                <%= article.title%>
            </h1>
        </div>
        <div class="padding2">
            <h3 class="title" style="font-weight: 800;text-align: center;">
                <%= article.subtitle%>
            </h3>
        </div>
        <div id="author">
            POR
            <span class="authorName">&nbsp;<%= article.nameAuthor%>&nbsp;</span>
            EM
            <span class="authorName">
                    &nbsp;<%= article.category.title%>&nbsp;
            </span>
            
            - Publicado em <%= article.createdAt.getDate()%>/<%= article.createdAt.getMonth() + 1%>/<%= article.createdAt.getFullYear()%> Ã s <%= article.createdAt.getHours()%>h<%= article.createdAt.getMinutes()%>
        
        </div>
        <br>
        <img width="100%" height="550px" src="/uploads/<%= article.img%>" loading="lazy" style="width:100%; margin-block-end: 1em; text-align:center; border-radius: 8px; box-shadow: 0px 0px 5px #c0c0c0;">

        <div class="clearfix">
            <div id="content-holder" style="float:left;margin-block-start: 1em;">
                <div id="content-post" style="position: relative; top: -8px;">
                    <%- article.body%>
                </div>
            </div>
        </div>

    </div>
</body>

</html>