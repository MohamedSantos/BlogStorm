  gtag('config', 'UA-177365414-1');
</script>

    <link rel="shortcut icon" href="/css/images/favicon.ico" >
    <link rel="stylesheet" href="/css/new.css">
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/share.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</head>

<body class="center">
      
  <div class="header">
    <a href="/"><img src="/uploads/Logo-Storm-Branco-PSD.png" loading="lazy" alt="Logo Storm Blog" class="logo"></a>
    <input type="checkbox" id="chk">
    <label for="chk" class="show-menu-btn">
    <i class="fas fa-ellipsis-h"></i>
    </label>

    <ul class="menu">
    <a href="/">Home</a>
    <a href="/category">Categorias</a>
    <a href="/about">Sobre nós</a>
    <a href="/contact">Contato</a>
    <label for="chk" class="hide-menu-btn">
      <i class="fas fa-times"></i>
    </ul>
  </div>
    <div class="maxhidth center">
        <div class="padding1">
            <h1 class="title" style="font-weight: 800;text-align: center;">
                <%= article.title%>
            </h1>
        </div>
        <div class="padding2">
            <h3 class="title" style="font-weight: 800;text-align: center;">
                <%= article.subtitle%>
            </h3>
        </div>
        <div id="author">
            POR
            <span class="authorName">&nbsp;<%= article.nameAuthor%>&nbsp;</span>
            EM
            <span class="authorName">
                <a href="/category/<%= article.category.slug%>">
                    &nbsp;<%= article.category.title%>&nbsp;
                </a>
            </span>
            
            - Publicado em <%= article.createdAt.getDate()%>/<%= article.createdAt.getMonth() + 1%>/<%= article.createdAt.getFullYear()%> às <%= article.createdAt.getHours()%>h<%= article.createdAt.getMinutes('mm')%>
        
        </div>
        <br>
        <img width="100%" loading="lazy" height="550px" alt="<%=article.title%>" src="/uploads/<%= article.img%>" style="width:100%; margin-block-end: 1em; text-align:center; border-radius: 8px; box-shadow: 0px 0px 5px #c0c0c0;">

        <div class="clearfix">
            <div id="content-holder" style="float:left;margin-block-start: 1em;">
                <div id="content-post" style="position: relative; top: -8px;">
                    <%- article.body%>
                </div>
            </div>
        </div>
        <hr>
